<main class="container">
  <!-- Header area that holds header text and input form-->
  <div class="jumbotron">
    <div class="row app_header">
      <div class="col-md-6 text-center">
        <img class="img-fluid" src="/assets/img/veg_burger.png" alt="veggie burger" />
      </div>

      <div class="col-md-6 text-center">
        <h1 class="main_header">Eat-Da-Burger!</h1>
        <h5>Add a burger, devour a burger</h5>
        <div class="row add_burger">

          <div class="col-10 offset-1 col-lg-8 offset-lg-2">
            <form class="create-form">
              <div class="form-group text-left">
                <label for="burger_input"><strong>Burger name to add:</strong></label>
                <div class="input-group input-group-sm">
                  <input type="text" class="form-control" id="burger_input" placeholder="" value="" required="">
                  <div class="input-group-append">
                    <button type="submit" class="btn btn-success btn-sm" id="submit">
                      <i class="fa fa-plus"></i>
                    </button>
                  </div>
                </div>
              </div>
            </form>
          </div>


        </div>
      </div>
    </div>

  </div>


  <div class="row burger-row">
    <div class="col-md-6" id="available">
      <div class="burger-div rounded-sm">
        <div class="burger-div-header">
          <h2 class="text-center">Available burgers</h2>
          <p class="text-center">(Click the cutlery icon to eat a burger!)</p>
        </div>
        <ul>
          {{#each burgers}}
          {{#unless this.devoured}}
          <li>
            {{this.id}}. {{this.burger_name}}

            <button type="button" class="btn btn-primary btn-sm eat_burger" data-id="{{id}}">
              <i class="fa fa-cutlery" aria-hidden="true"></i>
            </button>

          </li>

          {{/unless}}
          {{/each}}
        </ul>
      </div>
    </div>

    <div class="col-md-6" id="devoured">
      <div class="burger-div rounded-lg">
        <div class="burger-div-header">
          <h2 class="text-center">Devoured burgers</h2>
        </div>
        <ul>
          {{#each burgers}}
          {{#if this.devoured}}
          <li>
            <input type="text" placeholder="{{this.id}}. {{burger_name}}" disabled />
          </li>

          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>


  </div>

